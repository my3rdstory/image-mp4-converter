[Unit]
Description=Image MP4 Converter
After=network.target
Wants=network.target

[Service]
Type=simple
User=myhome
WorkingDirectory=/home/myhome/image-mp4-converter
Environment=HOST=127.0.0.1
Environment=PORT=1031
ExecStart=/usr/bin/env bash /home/myhome/image-mp4-converter/run.sh
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
